unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Buttons, Vcl.ExtCtrls,
  Vcl.Menus, Vcl.ToolWin, Vcl.ActnMan, Vcl.ActnCtrls, Vcl.ActnMenus,
  Vcl.Imaging.pngimage;

type
  TMainForm = class(TForm)
    Panel1: TPanel;
    Panel2: TPanel;
    Panel3: TPanel;
    Background: TImage;
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    N2: TMenuItem;
    Image2: TImage;
    Image3: TImage;
    Image4: TImage;
    Image5: TImage;
    N3: TMenuItem;
    N4: TMenuItem;
    N5: TMenuItem;
    N6: TMenuItem;
    procedure Panel1Click(Sender: TObject);
    procedure Panel3Click(Sender: TObject);
    procedure N3Click(Sender: TObject);
    procedure N4Click(Sender: TObject);
    procedure N5Click(Sender: TObject);
    procedure N6Click(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;
var
  MainForm: TMainForm;

implementation

{$R *.dfm}

uses Unit2, Unit3, Unit4, Code_Form;

procedure TMainForm.FormCreate(Sender: TObject);
var fontway:string;
begin
fontway:=extractfilepath(application.ExeName);
addfontresource(PChar(fontway + 'font\days.ttf'));
end;

procedure TMainForm.FormDestroy(Sender: TObject);
var fontway:string;
begin
fontway:=extractfilepath(application.ExeName);
removefontresource(PChar(fontway + 'font\days.ttf'));
end;

procedure TMainForm.N3Click(Sender: TObject);
begin
if not Assigned(form4) then
    form4 := Tform4.Create(Application);  // Создать форму, если она еще не создана

form4.SetMenuID(1);  // Установить Menu_ID
form4.show;
MainForm.hide;
end;

procedure TMainForm.N4Click(Sender: TObject);
begin
  if not Assigned(form4) then
    form4 := Tform4.Create(Application);  // Создать форму, если она еще не создана

  form4.SetMenuID(2);  // Установить Menu_ID
  form4.show;
  MainForm.hide;
end;

procedure TMainForm.N5Click(Sender: TObject);
begin
  if not Assigned(form4) then
    form4 := Tform4.Create(Application);  // Создать форму, если она еще не создана
  form4.SetMenuID(3);
  form4.show;
  MainForm.hide;
end;

procedure TMainForm.N6Click(Sender: TObject);
begin
  if not Assigned(form4) then
  form4 := Tform4.Create(Application);  // Создать форму, если она еще не создана
  form4.SetMenuID(4);
  form4.show;
  MainForm.hide;
end;

procedure TMainForm.Panel1Click(Sender: TObject);
begin
form3.show();
MainForm.hide();
end;



procedure TMainForm.Panel3Click(Sender: TObject);
begin
close;
end;

end.
